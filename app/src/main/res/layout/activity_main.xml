<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_TextName"
        android:hint="Név"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_TextPrice"
        android:inputType="number"
        android:layout_below="@+id/edit_TextName"
        android:hint="Egységár"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_TextCount"
        android:inputType="number"
        android:layout_below="@id/edit_TextPrice"
        android:hint="Mennyiség"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_TextMeasure"
        android:layout_below="@+id/edit_TextCount"
        android:hint="Mértékegység"/>
    <Button
        android:layout_width="match_parent"
        android:layout_below="@+id/edit_TextMeasure"
        android:layout_height="wrap_content"
        android:id="@+id/addButton"
        android:text="Hozzáadás"/>
    <Button
        android:layout_width="match_parent"
        android:layout_below="@+id/addButton"
        android:layout_height="wrap_content"
        android:id="@+id/listButton"
        android:text="Lista megjelenítése"/>

</RelativeLayout>